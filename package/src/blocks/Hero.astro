---
import type { ComponentProps } from 'astro/types'
import {
  Box,
  Button,
  Group,
  Heading,
  Image,
  Section,
  Tagline,
  Text,
} from 'fulldev-ui'

interface Props extends ComponentProps<typeof Section> {
  title?: string | ComponentProps<typeof Heading>
  description?: string | ComponentProps<typeof Text>
  buttons?: ComponentProps<typeof Button>[]
  image?: string | ComponentProps<typeof Image>
  structure?: 'stack' | 'spread' | 'split'
  panel?: boolean
}

const { title, description, buttons, image, align, structure, ...rest } =
  Astro.props
---

<Hero
  {align}
  {...rest}
>
  <Box
    structure="column"
    align={structure !== 'column' ? 'start' : align}
  >
    <Tagline {...typeof tagline === 'string' ? { text: tagline } : tagline} />
    <Heading {...typeof heading === 'string' ? { text: heading } : heading} />
    <Text {...typeof text === 'string' ? { text: text } : text} />
  </Box>
  <Group>
    {buttons?.map((button) => <Button {...button} />)}
  </Group>
  <Image {...typeof image === 'string' ? { src: image } : image} />
</Hero>
