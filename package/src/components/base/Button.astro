---
import type { ComponentProps, HTMLTag, Polymorphic } from 'astro/types'
import Component from '../_Component.astro'
import Icon from './Icon.astro'

type Props<As extends HTMLTag = 'a'> = Polymorphic<{ as: As }> & {
  size?: 'sm' | 'md' | 'lg'
  color?: 'base' | 'brand'
  contrast?: boolean
  html?: string
  text?: string
  variant?: 'solid' | 'soft' | 'surface' | 'outline' | 'ghost' | 'link'
  icon?: ComponentProps<typeof Icon> | ComponentProps<typeof Icon>['name']
}

const {
  as = 'a',
  variant = 'solid',
  color = variant === 'solid' ? 'brand' : 'base',
  contrast,
  icon,
  ...rest
} = Astro.props
---

<Component
  class:list={['button']}
  {as}
  {variant}
  {color}
  {contrast}
  {...rest}
>
  <slot />
  {typeof icon === 'string' ? <Icon name={icon} /> : <Icon {...icon} />}
</Component>

<style is:global lang="scss">
  @import '../../css/utils.scss';

  @include component('button') {
    @import '../../css/props/variant.scss';

    display: inline-flex;
    flex-shrink: 0;
    justify-content: center;
    align-items: center;
    vertical-align: top;
    gap: var(--space-2);
    transition: background-color var(--transition);
    cursor: pointer;
    outline: none !important;
    border: none;
    border-radius: var(--radius-1);
    padding-right: var(--element-3);
    padding-left: var(--element-3);
    height: calc(var(--text-label) + 2 * var(--element-3));
    color: var(--foreground);
    font-weight: var(--button-font-weight);
    font-size: var(--text-label);
    line-height: 1.625;
    font-family: var(--button-font-family);
    text-align: center;
    text-decoration: none;
    white-space: nowrap;

    &:focus-visible {
      outline: 2px solid var(--focus) !important;
      outline-offset: 2px;
    }

    &:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      pointer-events: none;
    }

    &.variant-link {
      box-shadow: none;
      background-color: transparent;
      padding: 0;

      &:hover {
        text-decoration: underline;
      }

      &.contrast {
        color: var(--foreground-contrast);
      }
    }
  }
</style>
