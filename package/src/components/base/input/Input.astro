---
import type { ComponentProps, Polymorphic } from 'astro/types'
import Component from '../../_Component.astro'
import Box from '../../segment/Box.astro'
import Label from '../../typography/Label.astro'
import Icon from '../Icon.astro'
import InputElement from './InputElement.astro'

type Props<As extends 'div'> = Polymorphic<{ as: As }> &
  Pick<
    ComponentProps<typeof InputElement>,
    'placeholder' | 'type' | 'name' | 'value' | 'disabled' | 'required'
  > & {
    variant?: 'outline'
    color?: 'base' | 'brand'
    label?: string
    icon?: string
  }

const {
  as = 'div',
  variant = 'outline',
  label,
  icon,
  // input attributes
  name,
  placeholder,
  type,
  value,
  disabled,
  required,
  ...rest
} = Astro.props
---

<Component
  class:list={['input']}
  {as}
  {variant}
  {...rest}
>
  <Label
    for={name}
    text={label}
  />
  <Box>
    <InputElement
      id={name}
      {name}
      {placeholder}
      {type}
      {value}
      {disabled}
      {required}
    />
    <Icon name={icon} />
  </Box>
</Component>

<style is:global lang="scss">
  @import '../../../css/utils.scss';

  @include component('input') {
    display: flex;
    position: relative;
    flex-direction: column;
    gap: var(--space-1);
    width: 100%;

    .icon {
      position: absolute;
      top: 50%;
      right: var(--element-2);
      transform: translateY(-50%);
    }
  }
</style>
