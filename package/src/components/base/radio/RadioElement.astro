---
import type { HTMLAttributes } from 'astro/types'
import Component from '../../_Component.astro'

type Props = HTMLAttributes<'input'> & {
  value?: string
  label?: string
  options?: string[]
}

const { label, value, name, options, ...rest } = Astro.props
---

<Component
  class:list={['radio-element']}
  if={true}
  as="input"
  type="radio"
  name={name}
  {...rest}
>
  <slot />
</Component>

<style is:global lang="scss">
  @import '../../../css/utils.scss';

  @include component('radio-element') {
    display: block;
    width: var(--text-label);
    height: var(--text-label);
    accent-color: var(--solid);
  }
</style>
