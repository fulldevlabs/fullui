---
import type { HTMLAttributes } from 'astro/types'
import Component from '../_Component.astro'
import Label from '../typography/Label.astro'

type Props = HTMLAttributes<'textarea'> & {
  name?: string
  label?: string
  rows?: string
  variant?: 'outline'
}
const { name, label, rows = '5', variant, ...rest } = Astro.props
---

<Label
  text={label}
  for={name}
/>
<Component
  class:list={['textarea']}
  if={true}
  as="textarea"
  name={name}
  {rows}
  {variant}
  {...rest}
/>

<style is:global lang="scss">
  @import '../../css/utils.scss';

  @include component('textarea') {
    display: flex;
    position: relative;
    align-items: center;
    outline: none;
    box-shadow: inset 0 0 0 var(--border-width) var(--border-outline);
    border: 0px;
    border-radius: var(--radius-1);
    background-color: var(--input-background);
    padding: var(--element-2);
    width: 100%;
    height: calc((var(--text-1) + 2 * var(--element-3)) * 2);
    min-height: calc((var(--text-1) + 2 * var(--element-3)) * 1);
    resize: vertical;
    color: var(--foreground);
    font-weight: var(--font-weight);
    font-size: var(--text-label);
    line-height: 1.25;
    font-family: var(--font-family);

    &:hover {
      outline: none;
      box-shadow: inset 0 0 0 1px var(--border-hover);
    }

    &:focus {
      outline: none;
      box-shadow: inset 0 0 0 3px var(--border-hover);
    }

    &:disabled {
      opacity: 50%;
      cursor: not-allowed;
      pointer-events: none;
    }
  }
</style>
