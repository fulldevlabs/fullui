---
import Story from '../components/Story.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <Story
    name={Astro.url.searchParams.get('component')}
    props={{
      color: Astro.url.searchParams.get('color')
        ? Astro.url.searchParams.get('color')
        : 'undefined',

      component: Astro.url.searchParams.get('component')
        ? Astro.url.searchParams.get('component')
        : '' /* cannot be undefined */,

      html: Astro.url.searchParams.get('html')
        ? Astro.url.searchParams.get('html')
        : '' /* text editable param */,

      name: Astro.url.searchParams.get('name')
        ? Astro.url.searchParams.get('name')
        : 'undefined',

      placeholder: Astro.url.searchParams.get('placeholder')
        ? Astro.url.searchParams.get('placeholder')
        : '' /* text editable param  */,

      rows: Astro.url.searchParams.get('rows')
        ? Astro.url.searchParams.get('rows')
        : '' /* text editable param  */,

      src: Astro.url.searchParams.get('src')
        ? Astro.url.searchParams.get('src')
        : '' /* text editable param  */,

      size: Astro.url.searchParams.get('size')
        ? Astro.url.searchParams.get('size')
        : 'undefined',

      type: Astro.url.searchParams.get('type')
        ? Astro.url.searchParams.get('type')
        : '' /* text editable param  */,

      variant: Astro.url.searchParams.get('variant')
        ? Astro.url.searchParams.get('variant')
        : 'undefined',
    }}
  />
</Layout>

<style>
  * {
    margin: 0;
    padding: 0;
  }
</style>
