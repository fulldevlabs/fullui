---
import { FulldevUIComponents } from '../schemas/components.ts'
import { Card } from 'fulldev-ui'

interface Props {
  component: string
}

const { component, ...rest } = Astro.props

const Component = FulldevUIComponents[component.charAt(0).toUpperCase() + component.slice(1)]
---

<Card frame="panel" structure="row">
  {
    Component ? (
      <Component {...rest} />
    ) : null
  }
</Card>

<style>
  .card {
    display: flex;
    height: 250px;
    align-content: center;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
