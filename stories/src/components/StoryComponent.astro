---
import { Button, Badge } from 'fulldev-ui'

const allowedComponents: any = {
  Button, 
  Badge
} as const

interface Props {
  component: string
}

const { component, ...rest } = Astro.props

const Component = allowedComponents[component.charAt(0).toUpperCase() + component.slice(1)]
---

{
  Component ? (
    <Component {...rest} />
  ) : ''
}
